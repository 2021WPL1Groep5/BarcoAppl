        <Button x:Name="btnSendJob1_Copy1" Click="View_Click" Content="VIEW JOBREQUEST" HorizontalAlignment="Center" Height="57" Margin="0,605,0,0" VerticalAlignment="Top" Width="246" Foreground="White" Background="#FFF10000"/>

